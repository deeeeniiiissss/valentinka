<body>
    <div class="card">
        <div id="question">
            <h1>üíù –¢—ã –±—É–¥–µ—à—å –º–æ–µ–π –≤–∞–ª–µ–Ω—Ç–∏–Ω–∫–æ–π? üíù</h1>
            <div class="game-area" id="game">
                <button class="yes-btn" onclick="sayYes()">üíñ –î–ê</button>
                <button class="no-btn" id="noBtn">üíî –ù–ï–¢</button>
            </div>
        </div>
        <div id="win" class="win hidden">
            <h1 style="color:#ff4d6d">–£–†–ê!!! üéâ</h1>
            <h2 style="color:#ff8c8c">–° –î–Ω–µ–º –°–≤—è—Ç–æ–≥–æ –í–∞–ª–µ–Ω—Ç–∏–Ω–∞!</h2>
            <p style="font-size: 40px; margin-top: 20px;">‚ù§Ô∏è üíõ üíö üíô üíú</p>
        </div>
    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const game = document.getElementById('game');
        
        function sayYes() {
            document.getElementById('question').style.display = 'none';
            document.getElementById('win').style.display = 'block';
        }
        
        function moveButton() {
            const gameRect = game.getBoundingClientRect();
            const btnRect = noBtn.getBoundingClientRect();
            
            const maxX = gameRect.width - btnRect.width - 30;
            const maxY = gameRect.height - btnRect.height - 30;
            
            if (maxX > 0 && maxY > 0) {
                noBtn.style.left = Math.random() * maxX + 'px';
                noBtn.style.top = Math.random() * maxY + 'px';
                noBtn.style.right = 'auto';
            }
        }
        
        noBtn.addEventListener('mouseover', moveButton);
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            moveButton();
        });
    </script>
